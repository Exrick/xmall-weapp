/* pages/ucenter/order/order.wxss */

.nav {
  position: fixed;
  width: 750rpx;
  top: 0;
  z-index: 10;
}

.loading-center {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.no-order {
  height: 80vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no-order .img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-order .txt {
  font-size: 26rpx;
  color: #999;
}

.orders {
  height: 100%;
}

.order {
  background: #fff;
  padding-left: 32rpx;
  margin-top: 20rpx;
}

.order .header {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx 0 0;
  border-bottom: 1px solid #f4f4f4;
  font-size: 27rpx;
  color: #555;
}

.header .delete {
  width: 45rpx;
  height: 45rpx;
}

.product {
  display: flex;
  align-items: center;
  height: 180rpx;
  border-bottom: 1px solid #f4f4f4;
}

.product .img {
  height: 145rpx;
  width: 145rpx;
  background-color: #f4f4f4;
}

.product .info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100rpx;
  margin-left: 20rpx;
  width: 430rpx;
}

.product .title {
  color: #555;
  font-size: 27rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product .specDesc {
  color: #999;
  font-size: 25rpx;
}

.product .status {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
  height: 100rpx;
  width: 100rpx;
}

.status .package {
  color: #555;
  font-size: 27rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.status .txt {
  color: #b4282d;
  font-size: 25rpx;
}

.status .txt-success {
  font-size: 25rpx;
  color: #2bab52;
}

.foot {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx 0 0;
  font-size: 27rpx;
  color: #555;
}

.foot .btns {
  display: flex;
  justify-content: flex-end;
}

.btn {
  margin-left: 20rpx;
}

.van-tabs {
  height: 100%;
}

.van-tabs__content {
  height: 100%;
  overflow: visible !important;
}
